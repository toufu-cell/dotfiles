{
  "env": {
    "DISABLE_AUTOUPDATER": "0",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Read",
      "Edit",
      "Write",
      "Bash(bash ~/.claude/skills/tmux-agent/bin/*)",
      "Bash(tee /tmp/*)",
      "WebFetch",
      "WebSearch",
      "Tool:mcp__playwright__*",
      "Tool:mcp__blender__*",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(bun *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(uv run *)",
      "Bash(pip *)",
      "Bash(pip3 *)",
      "Bash(ls *)",
      "Bash(ls)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(chmod *)",
      "Bash(ln *)",
      "Bash(which *)",
      "Bash(brew *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(tree *)",
      "Bash(pwd)",
      "Bash(env *)",
      "Bash(printenv *)",
      "Bash(gh *)",
      "Bash(docker *)",
      "Bash(make *)",
      "Bash(cargo *)",
      "Bash(go *)",
      "Bash(rustc *)",
      "Bash(tmux *)",
      "Bash(pgrep*)",
      "Bash(codex*)",
      "Bash(sleep*)",
      "Bash(echo *)",
      "Bash(wc *)",
      "Bash(tail *)",
      "Bash(sed *)",
      "Bash(test *)",
      "Bash(cat /tmp/tmux*)",
      "Bash(cat /tmp/codex*)",
      "Bash(rm -f /tmp/tmux*)",
      "Bash(rm -f /tmp/codex*)",
      "Bash(find *)",
      "Bash(date *)",
      "Bash(zsh *)",
      "Bash(TZ=*)",
      "Bash(diff *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(cut *)",
      "Bash(xargs *)",
      "Bash(touch *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(grep *)",
      "Bash(awk *)",
      "Bash(realpath *)",
      "Bash(dirname *)",
      "Bash(basename *)",
      "Bash(VAULT=*)",
      "Bash(RECIPE_DIR=*)",
      "Skill(*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/notify.sh"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/notify.sh"
          }
        ]
      },
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "PreToolUse": [],
    "PostToolUse": []
  },
  "alwaysThinkingEnabled": false,
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true
  }
}
